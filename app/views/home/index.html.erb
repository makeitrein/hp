<div class="home">
  <%= render 'layouts/welcome' %>

  <%= render 'refills/vertical_tabs' %>


  <div class="home-feed">
    <div class="home-reviews">
      <h2 class="home-title">Trending Fanfics <button class="home-button button">see all >></button></h2>
      <% 10.times do %>
        <%= render 'refills/card' %>
      <% end %>
    </div>

    <div class="home-comments">
      <h2 class="home-title">Trending Reviews <button class="home-button button">see all >></button></h2>
      <% 10.times do %>
        <%= render 'refills/comments' %>
      <% end %>
    </div>
  </div>

</div>
